pipeline {
    agent any
    tools {
        jdk 'jdk'
        maven 'maven'
    }
    environment {
        PATH = "$PATH:/usr/share/maven/bin"
        SCANNER_HOME = tool 'sonar-server'
    }
    stages {
        stage('Workspace Cleaning') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git branch: 'master', url: 'https://github.com/rameshpower/hello-world.git'
            }
        }
        stage("Sonarqube Analysis") {
            steps {
                withSonarQubeEnv('LocalSonarqube') {
                    sh "mvn sonar:sonar"
                }
            }
        }
    }
}
