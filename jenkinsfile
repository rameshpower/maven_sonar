pipeline {
    agent any
    
    tools {
        jdk 'JAVA8' // Assuming 'JAVA8' is configured in Jenkins
        maven 'maven3.6.3' // Assuming 'maven3.6.3' is configured in Jenkins
    }
    


        stage('Build') {
            steps {
                // No need to specify the directory if the pom.xml is in the root directory
                sh 'mvn clean package' // Maven will automatically use pom.xml in the current directory
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('LocalSonarqube') {
                        sh 'mvn -X sonar:sonar'
                    }
                }
            }
        }

        stage("Quality Gate") {
            steps {
                timeout(time: 10, unit: 'SECONDS') {
                    script {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "Pipeline aborted due to quality gate failure: ${qg.status}"
                        }
                    }
                }
            }
        }
    }

