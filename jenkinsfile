pipeline {
    agent any
    
    tools {
        jdk 'JAVA8'
        maven 'maven3.6.3'
    }
    
    stages {
        stage('Build') {
            steps {
                dir('/var/lib/jenkins/workspace/sonarqube/sonarqube-pipeline') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('/var/lib/jenkins/workspace/sonarqube/sonarqube-pipeline') {
                    script {
                        withSonarQubeEnv('LocalSonarqube') {
                            sh 'mvn -X sonar:sonar'
                        }
                    }
                }
            }
        }

        stage("Quality Gate") {
            steps {
                timeout(time: 10, unit: 'SECONDS') {
                    script {
                        def qg = waitForQualityGate()
                        def metrics = getCurrentQualityGateMetrics()
                        if (qg.status != 'OK' || metrics['coverage'] < 50) {
                            error "Pipeline aborted due to quality gate failure or code coverage less than 90%: ${qg.status}"
                        }
                    }
                }
            }
        }
    }
}
